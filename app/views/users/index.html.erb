<% @page_title = 'ユーザ一覧' %>

<div>
  <div class="font-weight-bold my-4 text-center">
    <h5 class="mb-4 font-weight-bold"><%= @page_title %></h5>
    <% @users.each do |user| %>
      <div class="index-user row bg-white text-left no-gutters">
        <div class="col-5">
          <div class="user_image_bg_main user_index" style="background-image: url(<%= avatar(user) %>); "></div>
        </div>
          <div class="col-7 user_description">
            <h6 class="font-weight-bold mt-2"><%= user.name %>
            <% if user.taste == 1 %>
              <div class="user_taste sweet pr-3"><i class="fas fa-cookie-bite"></i>甘党</div>
            <% elsif user.taste == 2 %>
              <div class="user_taste hot pr-3"><i class="fab fa-hotjar"></i>辛党</div>
            <% end %> 
            </h6>
            <p class="user_introduce"><%= user.introduce %></p>
            <p style="font-size: 1rem; font-weight: normal;"><%= link_to "詳細ページへ", "users/#{user.id}" %></p>
          </div>  
      </div>   
    <% end %>
  </div>
</div>
<div class="pagination">
  <%= paginate @users %>
</div>  