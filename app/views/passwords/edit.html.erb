<% @page_title = "パスワードの再設定" %>

<p class="font-weight-bold m-0 py-3 ml-3"><%= @page_title %></p>
<div class="container bg-white py-4">
<%= render "shared/errors", obj: @user %>
<%= form_for @user, as: "account", url: :password do |form| %>
  <div class="form-group col-lg-6">
    <%= form.label :current_password %>
    <%= form.password_field :current_password, :class => "form-control form-control-sm" %>
  </div>
  <div class="form-group col-lg-6">
    <%= form.label :password %>
    <%= form.password_field :password, :class => "form-control form-control-sm" %>
  </div>
  <div class="form-group col-lg-6">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, :class => "form-control form-control-sm" %>
  </div>
  <div><%= form.submit "変更" %></div>
<% end %>
<div class="text-right">
  <%= link_to "マイページへ戻る", :account %>
</div>
</div>