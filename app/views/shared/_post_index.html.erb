<div class="font-weight-bold my-4 text-right">
    <div class="mr-3">
    <%= form_for :search_posts, method: :get, class: "search" do %>
      <%= select_date date = Date.today, :start_year => 2019, :end_year => Time.now.year, prefix: :date %>
      <%= submit_tag "俺飯日付検索" %>
    <% end %>
    </div>
</div>
<% if controller.action_name == "search" %>
  <div class ="text-center ml-3 mb-4 font-weight-bold">
    <div><%= @query %> の検索結果</div>
  </div>
 <% end %> 
 <% if controller.action_name == "search" %>
    <% if @posts.empty? %>
      <div class="text-center mb-5 mt-5 font-weight-bold">俺飯が見つかりませんでした。</div>
    <% end %>
 <% end %>

<div class="row no-gutters">
 <% @posts.each do |post| %>
      <div class="mb-4 post-wrapper col-sm-6">
          <div class="user-image clearfix bg-white">
            <div class="posts-index-user-image float-left" style="background-image: url(/assets/sk.jpg);"></div>
            <h6 class="user_name float-left pt-3"><%= link_to post.author.name, "/users/#{post.author.id}" %></h6>
          </div>
          <div class="post_image" style="background-image: url(/assets/sk.jpg);"></div>
        <div class="container bg-white pb-3">
          <h3 class="font-weight-bold pt-2 post_title"><%= truncate(post.title, length: 50) %></h3>
          <div class="text-right">
            <p class="post_status">
              <%# <span class="price">金額: <i class="fas fa-yen-sign"></i><%= post.price %>
              <%# </span><br> %> 
              <span class="review">満足度: <i class="fas fa-star"></i><%= post.review %></span><br>
            </p>
            <p class="link-to-show"><%= link_to "詳細ページへ", "/posts/#{post.id}" %></p>
            <p class="post_time">投稿日: <%= post.updated_at.strftime("%Y-%m-%d") %></p>
          </div>
        </div>
      </div>
    <% end %>
</div>
<div class="pagination">
  <%= paginate @posts %>
</div>  