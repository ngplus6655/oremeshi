<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title + ' - OREMESHI' %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag('hakumai.png') %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <script src="https://cdn.onesignal.com/sdks/OneSignalSDK.js" async=""></script>
    <script>
      var OneSignal = window.OneSignal || [];
      OneSignal.push(function() {
        OneSignal.init({
          appId: "b6e1c706-6344-44e2-a8d9-30f1edef4124",
        });
      });
    </script>
 </head>

  <body>
  <%= render "shared/header" %>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg,
       class: "alert-#{name} text-#{name} text-center my-3 container py-3 rounded", id: "flash" %>
    <% end %>
    <div class="container row mx-auto mt-2 p-0">
      <div class="main-wrapper-wrapper col-lg-9 bg-white rounded p-0">
        <div class="main-wrapper">
          <main>  
            <%= yield %>
          </main>
        </div>  
      </div> 
      <div class="col-lg-3 mt-lg-0 mt-4 p-0">
          <%= render 'shared/sidebar' %>
          <div class="mt-4"></div>
          <%= render 'shared/sidebar_menu' %>
          <div class="mt-4"></div>
          <%= render 'shared/sidebar_contact' %>
      </div>
    </div>
    <% if controller.action_name != "new" %>
      <div class="d-block d-lg-none">
      <%= link_to "/posts/new" do %>
        <i class="fas fa-plus bg-primary"></i>
      <% end %>
      </div>
    <% end %>

  </body>
</html>
